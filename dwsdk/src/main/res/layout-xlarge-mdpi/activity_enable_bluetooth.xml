<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/rlEnableBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/round_rect_orange_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/twenty_dip">

        <ImageView
            android:id="@+id/ivAlertImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/twenty_dip"
            android:src="@drawable/alert_image" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivAlertImage"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext_background"
            android:padding="@dimen/twenty_dip">

            <ImageView
                android:id="@+id/ivEnableBle"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/five_dip"
                android:layout_marginBottom="@dimen/twenty_dip"
                android:background="@drawable/enable_bluetooth" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/ten_dip"
                android:layout_marginLeft="@dimen/ten_dip"
                android:layout_marginRight="@dimen/ten_dip"
                android:layout_toRightOf="@id/ivEnableBle"
                android:orientation="vertical"
                android:paddingBottom="@dimen/five_dip"
                android:paddingLeft="@dimen/ten_dip"
                android:paddingRight="@dimen/ten_dip"
                android:paddingTop="@dimen/five_dip">

                <TextView
                    android:id="@+id/tvAlertTitle"
                    fontPath="fonts/averta.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/ten_dip"
                    android:text="@string/EnableBluetooth"
                    android:textColor="@color/Orange"
                    android:textSize="@dimen/thirty_sp" />

                <TextView
                    android:id="@+id/tvAlertText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/EnableBluetoothMsg"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/twenty_five_sp" />


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
