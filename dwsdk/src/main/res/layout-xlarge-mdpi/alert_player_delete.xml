<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/edittext_background"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".activities.players.SPAddEditPlayerActivity"
        tools:ignore="MissingPrefix">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/ten_dip"
            android:gravity="center"
            android:padding="@dimen/ten_dip"
            android:text="@string/DeletePlayerTitle"
            android:textColor="@color/black"
            android:textSize="@dimen/thirty_sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/twenty_dip"
            android:background="@color/LightGrey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/ten_dip"
            android:gravity="center"
            android:padding="@dimen/ten_dip"
            android:text="@string/DeletePlayerMsg"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_sp" />

        <TextView
            android:id="@+id/tvDeletePlayerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/twenty_dip"
            android:text="@string/DeletePlayerInfo"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen_sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/one_dip"
                android:layout_weight="1"
                android:background="@drawable/button_cancel_bg"
                android:padding="@dimen/ten_dip"
                android:text="@string/Cancel"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/twenty_five_sp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_submit_bg"
                android:padding="@dimen/ten_dip"
                android:text="@string/Delete"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/twenty_five_sp" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
