<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llIdlePlayset"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/alert_background"
    android:orientation="vertical"
    android:padding="@dimen/twenty_dip"
    tools:context="com.squarepanda.sdk.activities.bluetooth.SPPlaysetCalibrationActivity"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/tvCalibrationImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/thirty_dip"
        android:layout_marginTop="@dimen/twenty_dip"
        android:src="@drawable/idle_panda"/>


    <LinearLayout
        android:id="@+id/llIdlePlaysetInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/fifty_dip"
        android:layout_marginRight="@dimen/fifty_dip"
        android:background="@drawable/dialog_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/ten_dip">

        <TextView
            android:id="@+id/tvIdlePlaysetTitle"
            fontPath="fonts/averta.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/twenty_dip"
            android:gravity="center_horizontal"
            android:text="@string/Idle_Playset_Title"
            android:textColor="@color/Orange"
            android:textSize="@dimen/thirty_sp"/>

        <TextView
            android:id="@+id/tvIdlePlaysetMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dip"
            android:gravity="center_horizontal"
            android:text="@string/Idle_Playset_Message"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_sp"/>

        <Button
            android:id="@+id/btnIdlePlayset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/twenty_dip"
            android:background="@drawable/button_background"
            android:padding="@dimen/ten_dip"
            android:text="@string/Idle_Playset_Button"
            android:textColor="@android:color/white"
            android:textSize="@dimen/twenty_sp"/>
    </LinearLayout>

</LinearLayout>
