<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/ten_dip">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/one_forty_dip"
        android:layout_height="@dimen/one_forty_dip"
        android:background="@drawable/white_circle_bg"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/add_player" />

    <TextView
        android:id="@+id/tvAddPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:minLines="2"
        android:text="@string/Add_Player"
        android:textColor="@color/MediumPurple"
        android:textSize="@dimen/twenty_five_sp" />

</LinearLayout>
