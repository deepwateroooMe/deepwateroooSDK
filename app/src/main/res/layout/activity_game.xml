<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">
                <!-- tools:context="com.deepwaterooo.dw.GameActivity"> -->
  
    <LinearLayout
        android:id="@+id/llLetters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:orientation="horizontal"
        android:padding="@dimen/fifteen_dip">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/white_round_rect_bg"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="@dimen/forty_sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/white_round_rect_bg"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="@dimen/forty_sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/white_round_rect_bg"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="@dimen/forty_sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/white_round_rect_bg"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="@dimen/forty_sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/white_round_rect_bg"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="@dimen/forty_sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/white_round_rect_bg"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="@dimen/forty_sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/white_round_rect_bg"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="@dimen/forty_sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/white_round_rect_bg"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="@dimen/forty_sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvGameWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/twenty_dip"
        android:text="asdasdasd"
        android:textColor="@color/Black"
        android:textSize="@dimen/thirty_dip"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tvNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/twenty_dip"
            android:layout_marginTop="@dimen/twenty_dip"
            android:layout_toRightOf="@+id/tvGameWord"
            android:gravity="right"
            android:padding="@dimen/ten_dip"
            android:text="@string/Next"
            android:textColor="@color/red"
            android:textSize="@dimen/thirty_dip"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvselecPlayset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvGameWord"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/ten_dip"
        android:text="asdasdasd"
        android:textColor="@color/Black"
        android:textSize="@dimen/fifteen_sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvselecPlayset"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/ten_dip"
        android:text="Please place the character in 1st slot to fill the answer."
        android:textColor="@color/Black"
        android:textSize="@dimen/fifteen_sp" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_dip"
        android:background="@drawable/purple_round_rect_bg"
        android:paddingBottom="@dimen/fifteen_dip"
        android:paddingLeft="@dimen/thirty_dip"
        android:paddingRight="@dimen/thirty_dip"
        android:paddingTop="@dimen/fifteen_dip"
        android:text="Close"
        android:textColor="@color/black" />

</RelativeLayout>